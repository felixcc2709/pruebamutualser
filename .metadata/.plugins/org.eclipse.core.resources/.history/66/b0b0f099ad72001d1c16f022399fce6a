package com.prueba.alcancia.servicio;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;
@Component
public class ServicioValidadorMoneda {
	
	
	@Autowired
	private MonedaServicio monedaServicio;
	
	
	public Integer ejecutar(Integer valorMoneda) {
		
		 
		 if(valorMoneda==50) {
			 
			return monedaServicio.CuandoLaMonadaEsCincuenta(valorMoneda);
			
		 }
		 
	
		 if(valorMoneda==100) {
			 
				return monedaServicio.CuandoLaMonadaEsCincuenta(valorMoneda);
		 }
		 
		 if(valorMoneda==200) {
				return monedaServicio.CuandoLaMonadaEsCincuenta(valorMoneda);
		 }
		 
		 if(valorMoneda==500) {
				return monedaServicio.CuandoLaMonadaEsCincuenta(valorMoneda);
		 }
		 
		 if(valorMoneda==1000) {
				return monedaServicio.CuandoLaMonadaEsCincuenta(valorMoneda);
		 }
		
		 
		//if(moneda.getValor()==50 || (moneda.getValor()==100) || (moneda.getValor()==200) || (moneda.getValor()==500) || (moneda.getValor()==1000)   ) {
			
			
			//  monedaServicio.guardarMoneda(moneda);
		 return 0;
	}
}

		
	
	


